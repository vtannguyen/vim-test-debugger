{// This file was added by vim test debugger
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "configurations": {
    "debug pytest": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "type": "python",
        "cwd": "${workspaceRoot}",
        "program": "${PYTEST_LOCATION}",
        "args": ["${PYTEST_ARGS}"],
        "stopOnEntry": false,
        "console": "integratedTerminal"
      },
      "breakpoints": {
        "exception": {
          "raised": "Y",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  }
}
